- @sitename = "Upbansapes"
- @typekit_id = "ips8jtc"

!!! 5
%html
  %head
    %title= "#{@sitename} - #{@title}"
    %link{:href => "/stylesheets/application.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/orbit.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %script{:type => "text/javascript", :src => "http://use.typekit.com/#{@typekit_id}.js"}
    %script{:type => "text/javascript"}
      try{Typekit.load();}catch(e){}
    %script{:type => "text/javascript", :src => "http://code.jquery.com/jquery-1.5.min.js"}
    %script{:type => "text/javascript", :src => "/javascripts/modernizr-1.6.min.js"}
    %script{:type => "text/javascript", :src => "/javascripts/bgstretcher.js"}
    %script{:type => "text/javascript", :src => "/javascripts/jquery.ez-bg-resize.js"}
    %script{:type => "text/javascript", :src => "/javascripts/jquery.orbit.js"}
    %script{:type => "text/javascript", :src => "/javascripts/jquery.scroll.js"}
    %script{:type => "text/javascript", :src => "/javascripts/application.js"}
    = yield :page_javascript
  %body{:class => @body_class}
    %header
    #mast-header
      #brand
        .navigation
          %ul
            %li.home
              = link_to "Home", "/home", :class => "home"
            %li.about
              = link_to "About", "/about", :class => "about"
            %li.services
              = link_to "Services", "/services", :class => "services"
            %li.gallery
              = link_to "Gallery", "/gallery", :class => "gallery"
            %li.contact
              = link_to "Contact", "/contact", :class => "contact"
            %li.testimonials
              = link_to "Testimonials", "/testimonials", :class => "testimonials"
      #logo
        %a{:href => "/home"}
          = @sitename
    #content
      .container
        = yield
    .m3c-bar
      .copyright
        :markdown
          Copyright &copy; 2011-#{Time.now.year} [#{@sitename}](#), All Rights Reserved.
      .powered-by
        :markdown
          Powered by [Media 3 Creative](http://media3creative.com/) ~ [M3C Pro](http://media3creative.com/pack_pro.html)