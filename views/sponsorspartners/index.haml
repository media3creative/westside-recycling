- @title = "Sponsors & Partners"
- @body_class = "page sponsorspartners"

%style{ :type => "text/css" }
  :sass
    html
      :overflow hidden

.container
  .left-container
    %h1= @title
    .scrollbar-pane
      %h2 SPONSORS
      #sponsors
        .sponsor-gold
          %a{:href => "/contact"}
            %img{:src => "/images/partners/sponsor-now.jpg", :width => "100px", :height => "100px"}
          %p Gold Sponsor
        
        .sponsor-silver
          %a{:href => "http://www.sonicdrivein.com", :target =>"_blank"}
            %img{:src => "/images/partners/sonic.jpg", :width => "100px", :height => "100px"}
          %p Sonic Drive-In

        
        .sponsor-silver
          %a{:href => "http://www.cinemark.com/theatres", :target =>"_blank"}
            %img{:src => "/images/partners/cinemark.jpg", :width => "100px", :height => "100px"}
          %p Cinemark Theatres
        
        .sponsor-silver
          %a{:href => "/contact"}
            %img{:src => "/images/partners/sponsor-now.jpg", :width => "100px", :height => "100px"}
          %p Silver Sponsor
        
          

      %h2 PARTNERS   
      #partners
        .partner
          %a{:href => "http://www.inzonefoundation.org", :target =>"_blank"}
            %img{:src => "/images/partners/inzonefoundation.jpg", :width => "100px", :height => "100px"}
          %p InZONE Foundation

        .partner
          %a{:href => "http://www.prettymoneypromotionsandmanagement.weebly.com", :target =>"_blank"}
            %img{:src => "/images/partners/prettyMoney.jpg", :width => "100px", :height => "100px"}
          %p Pretty Money

        .partner
          %a{:href => "/contact"}
            %img{:src => "/images/partners/become-partner.jpg", :width => "100px", :height => "100px"}
          %p Become a Partner


- content_for :page_javascript do
  :javascript
    $(document).ready(function() {
      
      $.ezBgResize({
        img     : "/images/backgrounds/sponsors-partners.jpg",
        width   : 1600,
        height  : 1050,
        opacity : 1,
        center  : true
      });
      
    });
    $(document).ready(function(){
    	$(".container").ready(function(){
    		$(".container").animate({right:'18%'}, 1000);				   
    	});			   
    });